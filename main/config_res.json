{
    "name": "Keypoint_ResNet18_wofacepose",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet18",
        "args": {}
    },
    "data_loader": {
        "type": "KeyPointsDataLoader",
        "args":{
            "data_dir": "../../../kslr_metadata/train_keypoints",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "frames": 32,
            "sample_even": true,
            "interval": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
